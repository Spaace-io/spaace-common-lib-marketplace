# ========================
# Database Configuration
# ========================

# Primary database connection
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_password
DATABASE_NAME=your_database_name
DATABASE_SCHEMA=public
DATABASE_APPLICATION_NAME=spaace-marketplace
DATABASE_SSL=false

# Database connection pool settings
# Adjust these based on your application's concurrency needs
DATABASE_POOL_MAX=50              # Maximum connections in pool (default: 50)
DATABASE_POOL_MIN=5               # Minimum connections in pool (default: 5)
DATABASE_CONNECTION_TIMEOUT=30000 # Connection timeout in ms (default: 30000)
DATABASE_IDLE_TIMEOUT=30000       # Idle connection timeout in ms (default: 30000)

# Database clustering (optional)
DATABASE_USER_CLUSTER=false
DATABASE_MASTER_HOST=localhost
DATABASE_MASTER_PORT=5432
DATABASE_REPLICA_HOST=localhost
DATABASE_REPLICA_PORT=5432

# ========================
# Redis Configuration
# ========================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USE_TLS=false

# ========================
# RabbitMQ Configuration
# ========================

RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_HEARTBEAT_INTERVAL=5

# ========================
# Google Cloud Platform
# ========================

# GCP Project ID for PubSub
GCP_PROJECT=your-gcp-project-id

# Google Cloud KMS Key Names
REWARDS_DISTRIBUTOR_KMS_KEY_NAME=projects/your-project/locations/global/keyRings/your-keyring/cryptoKeys/rewards-distributor
MARKET_MAKING_KMS_KEY_NAME=projects/your-project/locations/global/keyRings/your-keyring/cryptoKeys/market-making

# ========================
# Twitter API Configuration
# ========================

# Twitter OAuth 1.0a credentials (for user authentication)
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret

# Twitter API v2 Bearer Token (for app-only authentication)
TWITTER_APP_BEARER_TOKEN=your_twitter_bearer_token

# ========================
# Environment Configuration
# ========================

# Environment name (used for PubSub topic naming)
ENVIRONMENT=development 